<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BluetoothActivityForChild">

    <TextView
        android:id="@+id/textViewChild"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="116dp"
        android:fontFamily="@font/bmdohyun"
        android:gravity="center"
        android:text="아동 심폐소생술 안내기"
        android:textColor="#E8AF05"
        android:textSize="30dp"
        app:layout_constraintBottom_toTopOf="@+id/pressure3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnConnect3"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginTop="196dp"
        android:background="@drawable/button2"
        android:fontFamily="@font/bmdohyun"
        android:text="Connect"
        android:textColor="#132CB5"
        app:layout_constraintHorizontal_bias="0.274"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnSend3"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginTop="196dp"
        android:background="@drawable/button2"
        android:fontFamily="@font/bmdohyun"
        android:text="SEND"
        android:textColor="#132CB5"
        app:layout_constraintHorizontal_bias="0.762"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/pressure3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="269dp"
        android:fontFamily="@font/bmdohyun"
        android:gravity="center"
        android:hint="압박 정도"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewChild" />

    <TextView
        android:id="@+id/success3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="3dp"
        android:layout_marginBottom="192dp"
        android:fontFamily="@font/bmdohyun"
        android:text="성공"
        android:textColor="#4B5487"
        android:textSize="65dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/fail3"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/fail3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="6dp"
        android:layout_marginBottom="192dp"
        android:fontFamily="@font/bmdohyun"
        android:text="실패"
        android:textColor="#4B5487"
        android:textSize="65dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/success3" />

    <Button
        android:id="@+id/btnmp3on3"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="56dp"
        android:background="@drawable/button5"
        android:fontFamily="@font/bmdohyun"
        android:text="음악 시작"
        android:textColor="#132CB5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/btnConnect3"
        app:layout_constraintStart_toStartOf="@+id/btnConnect3"
        app:layout_constraintTop_toBottomOf="@+id/success3"
        app:layout_constraintVertical_bias="0.023" />

    <Button
        android:id="@+id/btnmp3off3"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="56dp"
        android:background="@drawable/button5"
        android:fontFamily="@font/bmdohyun"
        android:text="음악 중지"
        android:textColor="#132CB5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/btnSend3"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/btnSend3"
        app:layout_constraintTop_toBottomOf="@+id/success3"
        app:layout_constraintVertical_bias="0.023" />


</androidx.constraintlayout.widget.ConstraintLayout>